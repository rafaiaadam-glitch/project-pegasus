{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pegasus.local/schemas/artifacts/outline.schema.json",
  "title": "HierarchicalOutlineArtifact",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "courseId",
    "lectureId",
    "presetId",
    "artifactType",
    "generatedAt",
    "version",
    "outline"
  ],
  "$defs": {
    "outlineNode": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "points": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/outlineNode"
          }
        }
      }
    }
  },
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "courseId": {
      "type": "string",
      "minLength": 1
    },
    "lectureId": {
      "type": "string",
      "minLength": 1
    },
    "presetId": {
      "type": "string",
      "minLength": 1
    },
    "artifactType": {
      "type": "string",
      "const": "outline"
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "threadRefs": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "outline": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/outlineNode"
      }
    }
  }
}
