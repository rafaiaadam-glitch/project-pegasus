{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pegasus.local/schemas/artifacts/flashcards.schema.json",
  "title": "FlashcardsArtifact",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "courseId",
    "lectureId",
    "presetId",
    "artifactType",
    "generatedAt",
    "version",
    "cards"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "courseId": {
      "type": "string",
      "minLength": 1
    },
    "lectureId": {
      "type": "string",
      "minLength": 1
    },
    "presetId": {
      "type": "string",
      "minLength": 1
    },
    "artifactType": {
      "type": "string",
      "const": "flashcards"
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "threadRefs": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "cards": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["front", "back"],
        "properties": {
          "front": {
            "type": "string",
            "minLength": 1
          },
          "back": {
            "type": "string",
            "minLength": 1
          },
          "difficulty": {
            "type": "string",
            "enum": ["easy", "medium", "hard"]
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "threadRef": {
            "type": "string"
          }
        }
      }
    }
  }
}
