{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pegasus.local/schemas/artifacts/key-terms.schema.json",
  "title": "KeyTermsArtifact",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "courseId",
    "lectureId",
    "presetId",
    "artifactType",
    "generatedAt",
    "version",
    "terms"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "courseId": {
      "type": "string",
      "minLength": 1
    },
    "lectureId": {
      "type": "string",
      "minLength": 1
    },
    "presetId": {
      "type": "string",
      "minLength": 1
    },
    "artifactType": {
      "type": "string",
      "const": "key-terms"
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "threadRefs": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "terms": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["term", "definition"],
        "properties": {
          "term": {
            "type": "string",
            "minLength": 1
          },
          "definition": {
            "type": "string",
            "minLength": 1
          },
          "example": {
            "type": "string"
          },
          "threadRef": {
            "type": "string"
          }
        }
      }
    }
  }
}
