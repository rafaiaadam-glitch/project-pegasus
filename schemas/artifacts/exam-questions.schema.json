{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pegasus.local/schemas/artifacts/exam-questions.schema.json",
  "title": "ExamQuestionsArtifact",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "courseId",
    "lectureId",
    "presetId",
    "artifactType",
    "generatedAt",
    "version",
    "questions"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "courseId": {
      "type": "string",
      "minLength": 1
    },
    "lectureId": {
      "type": "string",
      "minLength": 1
    },
    "presetId": {
      "type": "string",
      "minLength": 1
    },
    "artifactType": {
      "type": "string",
      "const": "exam-questions"
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "threadRefs": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "questions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["prompt", "type", "answer"],
        "properties": {
          "prompt": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["multiple-choice", "short-answer", "essay", "true-false"]
          },
          "answer": {
            "type": "string",
            "minLength": 1
          },
          "choices": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "correctChoiceIndex": {
            "type": "integer",
            "minimum": 0
          },
          "threadRef": {
            "type": "string"
          }
        }
      }
    }
  }
}
